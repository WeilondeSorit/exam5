<Page x:Class="Exam5.Pages.GuestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GuestPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Поиск -->
            <RowDefinition Height="Auto"/>
            <!-- Предупреждение -->
            <RowDefinition Height="*"/>
            <!-- Список товаров -->
        </Grid.RowDefinitions>

        <!-- Панель поиска и фильтрации -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="SearchTextBox" 
                     Width="200" Height="30"
                     TextChanged="SearchTextBox_TextChanged"
                    />

            <ComboBox x:Name="Filter" 
                      Width="150" Height="30" Margin="10,0,0,0"
                      SelectionChanged="Filter_SelectionChanged"/>
            <Button x:Name="exit" Click="exit_Click" Width="150" Height="30" Margin="10, 0,0,0" Content="Выход!"/>
        </StackPanel>

        <!-- Предупреждение -->
        <TextBlock Grid.Row="1" Text="Войдите, чтобы оформить заказ"
                   HorizontalAlignment="Center" Margin="10"
                   FontSize="14" Style="{StaticResource Texts}"/>

        <!-- Список товаров -->
        <ListView x:Name="ProductsListView" Grid.Row="2" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate >
                    <Border BorderBrush="Green" BorderThickness="1" 
                            Margin="0,5" Padding="10" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>

                            <!-- Картинка СЛЕВА -->
                            <Image Grid.Column="0" 
                                   Source="{Binding ImagePath}"
                                   Width="80" Height="80"
                                   Margin="0,0,15,0"/>

                            <!-- Информация СПРАВА -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding ProductName}" 
                                           FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding Manufacturer}" 
                                           Foreground="Gray"/>
                                <TextBlock Text="{Binding Category}" 
                                           FontStyle="Italic"/>

                                <!-- Цена и количество в одной строке -->
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding Price, StringFormat='Цена: {0} руб.'}" 
                                               FontWeight="Bold" Foreground="Green"/>
                                    <TextBlock Text="   " />
                                    <TextBlock Text="{Binding Quantity, StringFormat='Осталось: {0} шт.'}" 
                                               Foreground="Blue"/>
                                </StackPanel>

                                <!-- Статус -->
                                <TextBlock Text="{Binding Status}" Margin="0,5,0,0"
                                           />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
