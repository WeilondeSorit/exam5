<Page x:Class="Exam5.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="Exit" Content="Выход" Width="120" Height="30" Margin="10,0,0,0" HorizontalAlignment="Left" Click="Exit_Click" Style="{StaticResource Buttons}"/>
            <TextBox x:Name="Search" Margin="10,0,0,0" Height="30" Width="120"/>
            <ComboBox x:Name="Filtr" Height="30" Width="120" Margin="10,0,0,0"/>
        </StackPanel>
        <ListView x:Name="Adminview" Grid.Row="1">
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Blue" BorderThickness="1" Margin="0,5" Padding="10" CornerRadius="5">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                        <Image Source="{Binding ImagePath}" Grid.Column="0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding ProductName}"/>
                            <TextBlock Text="{Binding Manufacturer}" 
                                           Foreground="Gray"/>
                            <TextBlock Text="{Binding Category}" 
                                           FontStyle="Italic"/>
                        </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBox x:Name="vara" Margin="10,0,0,0" Height="30" Width="120"/>
            <TextBox x:Name="varb" Margin="10,0,0,0" Height="30" Width="120"/>
            <TextBox x:Name="varc" Margin="10,0,0,0" Height="30" Width="120"/>
            <TextBox x:Name="vard" Margin="10,0,0,0" Height="30" Width="120"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <Button x:Name="AddButton" Click="AddButton_Click" Content="Добавить" Width="120" Height="30" Margin="10,0,0,0" HorizontalAlignment="Left" Style="{StaticResource Buttons}"/>
            <Button x:Name="EditButton" Click="EditButton_Click" Content="Редактировать" Width="120" Height="30" Margin="10,0,0,0" HorizontalAlignment="Left" Style="{StaticResource Buttons}" />
            <Button x:Name="DeleteButton" Click="DeleteButton_Click" Content="Удалить" Width="120" Height="30" Margin="10,0,0,0" HorizontalAlignment="Left" Style="{StaticResource Buttons}"/>
        </StackPanel>
        
        </Grid>
</Page>
