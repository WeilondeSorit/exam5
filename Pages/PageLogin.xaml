<Page x:Class="Exam5.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Логин" FontSize="30" HorizontalAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="login" Grid.Row="2" HorizontalAlignment="Center" Width="400"/>
        <TextBlock Text="Пароль" FontSize="30" Grid.Row="3" HorizontalAlignment="Center"/>
        <PasswordBox x:Name="password" Grid.Row="4" HorizontalAlignment="Center" Width="400"/>
        <Button x:Name="Log_in" Content="Войти" HorizontalAlignment="Center" FontSize="30" Grid.Row="6" Width="400" Click="Log_in_Click"/>
    </Grid>
</Page>
